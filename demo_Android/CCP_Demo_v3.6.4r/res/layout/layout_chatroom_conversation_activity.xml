<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    android:orientation="vertical" >
    
	<include 
	    android:id="@+id/head"
	    layout="@layout/voice_head"/>
	<TextView 
	    android:id="@+id/notice_tips"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/top_point_bg"
	    android:text="@string/str_click_into_chatroom"
	    android:textColor="@android:color/white"
	    android:gravity="center_vertical"
	    android:paddingLeft="25.0dip"
	    android:textSize="16.0sp"
	    android:layout_below="@+id/head"/>
	<ListView
        android:id="@+id/chatroom_list"
        android:layout_below="@+id/notice_tips"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@drawable/listview_diviver_line"
        android:dividerHeight="2.0px"
        android:fadingEdgeLength="0.0dip"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none"
        android:scrollingCache="false" />
	<LinearLayout 
	    android:id="@+id/chatroom_empty"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/notice_tips"
	    android:layout_marginTop="40.0dip"
	    android:gravity="center"
	    android:orientation="vertical">
	    <TextView 
	        android:id="@+id/empty_tips"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#9F9F9F"
	        android:textSize="18.0sp"
	        android:text="没有群聊房间,请先创建一个"/>
	    <Button 
	        android:id="@+id/begin_create_chatroom"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="30.0dip"
	        android:textSize="19.0sp"
	        android:textColor="@android:color/white"
	        android:text="创建群聊房间"
	        android:background="@drawable/voice_start_inter_selector"/>
	</LinearLayout>
</RelativeLayout>