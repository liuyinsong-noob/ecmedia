<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/group_card_column"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:duplicateParentState="true"
        android:padding="5.0dip"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/group_card_raw_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:layout_gravity="center_vertical"
            android:textColor="#ff535353"
            android:textSize="16sp"
            android:text="个性签名"
            android:minWidth="90.0dip"
            android:duplicateParentState="true"
            />
        <TextView
            android:id="@+id/group_card_raw_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:duplicateParentState="true"
            android:paddingRight="10dip"
            android:textSize="14sp"
            android:layout_weight="1.0"
            android:textColor="#8ece04"/>
        <ImageView
            android:id="@+id/group_card_raw_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="7dip"
        	android:scaleType="fitXY"
        	android:src="@drawable/icon_group_card_detail_selector"
            />
    </LinearLayout>

    <!-- 放下线       -->
    <ImageView
        android:id="@+id/group_card_botton_line"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/split_line"/>
</LinearLayout>