<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/small_margin_space" >

    <include
        android:id="@+id/mail_edit_text"
        layout="@layout/ccp_edittext" />

    <include
        android:id="@+id/pwd_edit_text"
        layout="@layout/ccp_edittext" />
    
    <com.voice.demo.views.CCPButton
        android:id="@+id/experience_login_submit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin_space"
        android:background="@drawable/video_blue_button_selector" />

    <TextView
        android:id="@+id/forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/small_margin_space"
        android:singleLine="true"
        android:text="@string/experience_forget_password"
        android:textAppearance="@style/mode_desc_text_appearance"
        android:textColor="@color/white" />

</LinearLayout>