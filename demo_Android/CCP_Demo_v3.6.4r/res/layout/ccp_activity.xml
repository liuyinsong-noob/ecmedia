<?xml version="1.0" encoding="utf-8"?>
<com.voice.demo.views.CCPLayoutListenerView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ccp_base_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/transparent"
    android:orientation="vertical" >

    <View
        android:id="@+id/view_top_margin"
        android:layout_width="fill_parent"
        android:layout_height="24.0dip"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/ccp_content_fl"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:id="@+id/ccp_root_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" />

        <RelativeLayout
            android:id="@+id/ccp_float_layer"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="gone" />

        <Button
            android:id="@+id/ccp_trans_layer"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/black"
            android:visibility="gone" />

        <ScrollView
            android:id="@+id/ccp_body_sv"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="gone" />
    </FrameLayout>

</com.voice.demo.views.CCPLayoutListenerView>